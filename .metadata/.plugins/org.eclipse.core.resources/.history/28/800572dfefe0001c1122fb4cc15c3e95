package io.github.lunaribeiro.vendasapi.util;

import java.time.Instant;
import java.time.LocalDate;
import java.time.ZoneId;
import java.time.format.DateTimeFormatter;
import java.util.Date;

import org.springframework.util.StringUtils;

public class DateUtils {

	public static Date fromString(String dataString) {
		if(StringUtils.hasText(dataString)) {
			return null;
		}
		var dataInicioLocalDate = LocalDate.parse(dataString, DateTimeFormatter.ofPattern("dd/MM/yyyy"));
		var instant = dataInicioLocalDate.atStartOfDay().atZone(ZoneId.systemDefault()).toInstant();
		return Date.from(instant);
	}
}
